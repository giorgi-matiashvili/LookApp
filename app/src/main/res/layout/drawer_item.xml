<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/drawer_background_color"
    android:orientation="horizontal">

    <ImageView
        android:layout_margin="3dp"
        android:id="@+id/drawer_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/drawer_item_image_margin"
        android:layout_marginRight="@dimen/drawer_item_image_margin"/>

    <TextView
        android:id="@+id/drawer_item_text"
        android:layout_width="wrap_content"
        android:textColor="@color/drawer_text_color"
        android:layout_height="wrap_content" />

</LinearLayout>
